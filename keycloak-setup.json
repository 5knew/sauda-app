{
  "realm": "sauda-realm",
  "enabled": true,
  "displayName": "Sauda-DB Realm",
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,
  "clients": [
    {
      "clientId": "sauda-app",
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "secret": "sauda-secret",
      "redirectUris": ["http://localhost:8080/*"],
      "webOrigins": ["http://localhost:8080"],
      "protocol": "openid-connect",
      "publicClient": false,
      "serviceAccountsEnabled": true,
      "authorizationServicesEnabled": true,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "attributes": {
        "access.token.lifespan": "3600",
        "client.session.idle.timeout": "1800",
        "client.session.max.lifespan": "36000"
      }
    }
  ],
  "roles": {
    "realm": [
      {
        "name": "USER",
        "description": "Regular user role - can view products and basic operations"
      },
      {
        "name": "ADMIN",
        "description": "Administrator role - full access to all operations"
      },
      {
        "name": "MANAGER",
        "description": "Manager role - can manage products, inventory, and sales"
      },
      {
        "name": "CASHIER",
        "description": "Cashier role - can process sales and view inventory"
      },
      {
        "name": "INVENTORY_MANAGER",
        "description": "Inventory Manager role - can manage stock and suppliers"
      },
      {
        "name": "SALES_MANAGER",
        "description": "Sales Manager role - can view sales reports and manage customers"
      }
    ]
  },
